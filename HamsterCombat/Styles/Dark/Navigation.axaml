<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20">
      <!-- Add Controls for Previewer Here -->
    </Border>
  </Design.PreviewWith>

	<Style Selector="Grid.Navigation">
		<Setter Property="Background" Value="#1c1f24"/>
	</Style>

	<Style Selector="UniformGrid.Panel">

	</Style>

	<Style Selector="UniformGrid.Panel > StackPanel">
		<Setter Property="Spacing" Value="10"/>
	</Style>




	<Style Selector="Border.MenuList">
		<Setter Property="Background" Value="#272a2f"/>
		<Setter Property="Margin" Value="10, 0"/>
		<Setter Property="Padding" Value="10"/>
		<Setter Property="CornerRadius" Value="25"/>
	</Style>


	<Style Selector="ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Background" Value="#1c1f24"/>
		<Setter Property="CornerRadius" Value="25"/>
	</Style>


	<Style Selector="StackPanel.Item > TextBlock">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Bottom"/>
		<Setter Property="Foreground" Value="#4e4f51"/>
	</Style>
</Styles>
